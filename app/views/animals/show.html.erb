<h2>Animals - Show</h2>
<p>
  <span>Name:</span>
  <%= @animal.name %>
</p>
<% if @animal.images.any? %>
  <div>
    <span>
      <%= pluralize(@animal.images.count, "Image") %>:
    </span>
      <% @animal.images.each do |img| %>
        <div><%= image_tag(url_for(img), width: '500') %></div>
      <% end %>
  </div>
<% end %>
<p>
  <span>Credit:</span>
  <%= @animal.credit.html_safe %>
</p>
<%= link_to 'Edit', edit_animal_path(@animal) %>
<%= link_to 'View Animals', animals_path %>